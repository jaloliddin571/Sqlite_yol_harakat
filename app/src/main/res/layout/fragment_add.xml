<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Fragmentlar.AddFragment">


    <ImageView
        android:id="@+id/add_img"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/baseline_image_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Yo’l belgisining rasmini qo’shish uchun rasm ustiga bosing"
        android:textColor="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"

        >

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="Yo’l belgisining nomi"
            android:paddingStart="20dp"
            android:textColor="#2196F3"
            android:textColorHint="#2196F3" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"

        >

        <EditText
            android:id="@+id/edt_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="Yo’l belgisining to’liq tarifi"
            android:paddingStart="20dp"
            android:paddingBottom="90dp"
            android:textColor="#2196F3"
            android:textColorHint="#2196F3" />

    </androidx.cardview.widget.CardView>



        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/add_label_card"
            android:textColor="@color/white"
            />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Saqlash"
        android:textColor="#2196F3"
        app:cornerRadius="10dp"
        app:strokeColor="#2196F3"
        app:strokeWidth="3dp" />


</androidx.appcompat.widget.LinearLayoutCompat>